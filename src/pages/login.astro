---

import MainLayout from '../layouts/Layout.astro';
---

<MainLayout title="Iniciar Sesión">
  <h1 class="text-2xl font-bold text-[#4F774D] mb-6 text-center">Iniciar Sesión</h1>
  
  <form action="#" method="POST" class="space-y-4">
    <!-- Correo -->
    <div>
      <label for="correo" class="block text-sm font-medium text-[#A16436]">Correo</label>
      <input type="email" id="correo" name="correo" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]" />
    </div>

    <!-- Contraseña -->
    <div>
      <label for="password" class="block text-sm font-medium text-[#A16436]">Contraseña</label>
      <input type="password" id="password" name="password" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]" />
    </div>

     <!-- Olvidaste tu contraseña -->
     <div class="text-right">
      <a href="/forgot-password" class="text-sm text-[#8AB6D6] hover:text-[#4F774D]">¿Olvidaste tu contraseña?</a>
    </div>

     <!-- Enlace a cambiar contraseña -->
     <div class="text-right mt-2">
      <a href="/reset-password" class="text-sm text-[#8AB6D6] hover:text-[#4F774D]">Cambiar Contraseña</a>
    </div>
   

    <!-- Botón de Inicio de Sesión -->
    <div class="flex justify-center">
      <button type="submit" class="px-4 py-2 bg-[#F4A261] text-white font-semibold rounded-md shadow-md hover:bg-[#E08648] focus:outline-none focus:ring-2 focus:ring-[#4F774D] focus:ring-opacity-50">
        Iniciar Sesión
      </button>
    </div>
  </form>

  <!-- Enlace al registro -->
  <div class="mt-4 text-center">
    <p class="text-sm">¿No tienes una cuenta? 
      <a href="/register" class="text-[#8AB6D6] hover:text-[#4F774D]">Regístrate</a>
    </p>
  </div>
</MainLayout>
