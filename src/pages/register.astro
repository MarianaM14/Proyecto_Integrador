---
// Usamos el layout MainLayout y pasamos el título "Registro"
import MainLayout from '../layouts/Layout.astro';
---

<MainLayout title="Registro">
  <h1 class="text-2xl font-bold text-[#4F774D] mb-6 text-center">Formulario de Registro</h1>
  
  <form action="#" method="POST" class="space-y-4">
          
    <!-- Nombres -->
    <div>
      <label for="nombres" class="block text-sm font-medium text-[#A16436]">Nombres</label>
      <input type="text" id="nombres" name="nombres" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]"/>
    </div>
    
    <!-- Apellidos -->
    <div>
      <label for="apellidos" class="block text-sm font-medium text-[#A16436]">Apellidos</label>
      <input type="text" id="apellidos" name="apellidos" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]"/>
    </div>
    
    <!-- Correo -->
    <div>
      <label for="correo" class="block text-sm font-medium text-[#A16436]">Correo</label>
      <input type="email" id="correo" name="correo" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]"/>
    </div>
    
    <!-- Edad -->
    <div>
      <label for="edad" class="block text-sm font-medium text-[#A16436]">Edad</label>
      <input type="number" id="edad" name="edad" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]"/>
    </div>
    
    <!-- Tipo de Documento -->
    <div>
      <label for="tipo_documento" class="block text-sm font-medium text-[#A16436]">Tipo de Documento</label>
      <select id="tipo_documento" name="tipo_documento" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] bg-white rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]">
        <option value="cc">Cédula de Ciudadanía</option>
        <option value="ti">Tarjeta de Identidad</option>
        <option value="ce">Cédula de Extranjería</option>
      </select>
    </div>
    
    <!-- Documento -->
    <div>
      <label for="documento" class="block text-sm font-medium text-[#A16436]">Número de Documento</label>
      <input type="text" id="documento" name="documento" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]"/>
    </div>
    
    <!-- Rol -->
    <div>
      <label for="rol" class="block text-sm font-medium text-[#A16436]">Soy</label>
      <select id="rol" name="rol" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] bg-white rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]">
        <option value="estudiante">Estudiante</option>
        <option value="profesor">Profesor</option>
        <option value="administrativo">Administrativo</option>
      </select>
    </div>
    
    <!-- Contraseña -->
    <div>
      <label for="password" class="block text-sm font-medium text-[#A16436]">Crear Contraseña</label>
      <input type="password" id="password" name="password" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]"/>
    </div>
    
    <!-- Botón de Registro -->
    <div class="flex justify-center">
      <button type="submit" class="px-4 py-2 bg-[#4F774D] text-white font-semibold rounded-md shadow-md hover:bg-[#679c65] focus:outline-none focus:ring-2 focus:ring-[#4F774D] focus:ring-opacity-50">
        Registrarse
      </button>
    </div>
  </form>

  <!-- Enlace al inicio de sesión -->
  <div class="mt-4 text-center">
    <p class="text-sm">¿Ya tienes una cuenta? 
      <a href="/login" class="text-[#8AB6D6] hover:text-[#4F774D]">Inicia Sesión</a>
    </p>
  </div>
</MainLayout>
