---
// Usamos el layout MainLayout
import MainLayout from '../layouts/Layout.astro';
---

<MainLayout title="Cambiar Contraseña">
  <h1 class="text-2xl font-bold text-[#4F774D] mb-6 text-center">Cambiar Contraseña</h1>

  <form action="/login" method="GET" class="space-y-4">
    <!-- Contraseña actual -->
    <div>
      <label for="current-password" class="block text-sm font-medium text-[#A16436]">Contraseña Actual</label>
      <input type="password" id="current-password" name="current-password" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]" />
    </div>

    <!-- Nueva Contraseña -->
    <div>
      <label for="new-password" class="block text-sm font-medium text-[#A16436]">Nueva Contraseña</label>
      <input type="password" id="new-password" name="new-password" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]" />
    </div>

    <!-- Confirmar Nueva Contraseña -->
    <div>
      <label for="confirm-password" class="block text-sm font-medium text-[#A16436]">Confirmar Nueva Contraseña</label>
      <input type="password" id="confirm-password" name="confirm-password" required class="mt-1 block w-full px-3 py-2 border border-[#D9D9D9] rounded-md shadow-sm focus:outline-none focus:ring-[#4F774D] focus:border-[#4F774D]" />
    </div>

    <!-- Botón de cambio de contraseña -->
    <div class="flex justify-center">
      <button type="submit" class="px-4 py-2 bg-[#4F774D] text-white font-semibold rounded-md shadow-md hover:bg-[#679c65] focus:outline-none focus:ring-2 focus:ring-[#4F774D] focus:ring-opacity-50">
        Cambiar Contraseña
      </button>
    </div>
  </form>
  <!-- Enlace al inicio de sesión -->
  <div class="mt-4 text-center">
    <p class="text-sm">
      <a href="/login" class="text-[#8AB6D6] hover:text-[#4F774D]">Iniciar Sesión</a>
    </p>
  </div>
</MainLayout>
